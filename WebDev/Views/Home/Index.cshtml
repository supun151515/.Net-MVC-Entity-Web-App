<div class="upcoming_head">
    Upcoming Events...
</div>

<div class="container">
    <div class="row">
        @{
            Random rnd = new Random();
            int picID = rnd.Next(1, 7);
        }
        @foreach (var eventHit in (ViewBag.LatestEvents))
        {
            DateTime date_val = Convert.ToDateTime(eventHit.Date);

            picID++;
            var picName = picID + ".png";


        <div class="col-sm-4 box-outer">
            
            <div class="box-data hvr-shutter-out-horizontal tooltipclass">
                <div class="tooltiptext">@eventHit.Description <p class="location"><br />@eventHit.Location</p><p class="fee">Fee $@eventHit.TicketFee</p></div>
                <img class="img-center" src="~/Content/images/@picName" alt="" />
                <span class="event-name">@eventHit.EventName</span>
                <p class="event-date-day">
                    @date_val.ToString("dd")
                    <span class="event-date-month">@date_val.ToString("MMMM")</span>
                    <span class="event-date-year">@date_val.ToString("yyyy")</span>
                </p>
            </div>
        </div>
        }
    </div>
</div>

